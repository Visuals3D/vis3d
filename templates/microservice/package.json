{
  "name": "${MICROSERVICE_NAME}",
  "version": "1.0.0",
  "description": "The ${MICROSERVICE_NAME} Microservice",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy-assets": "ts-node tools/copyAssets",
    "tsc": "tsc",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon -e ts, npm run dev:start",
    "build": "npm-run-all clean tsc copy-assets",
    "start": "node ./dist/app/src/index.js",
    "prod:start": "npm-run-all build start",
    "watch:debug": "nodemon --inspect=0.0.0.0 -e ts,tsx --exec node -r ts-node/register ./src/index.ts",
    "watch": "nodemon -e ts,tsx --exec node -r ts-node/register ./src/index.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test:coverage": "nyc --reporter=html --reporter=text --all --lines 90  npm run test",
    "test": " mocha -r ts-node/register 'tests/**/*.ts'",
    "test:api": "inso run test --env 'OpenAPI env'",
    "docs": "node ./tools/generateApiDocs.js",
    "generate:schema": "node ./tools/generateApiSchema.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "async": "^3.2.0",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/async": "^3.2.6",
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.16",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^6.1.1",
    "@types/errorhandler": "1.5.0",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/fs-extra": "^9.0.11",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.41",
    "chai": "^4.3.4",
    "eslint": "^7.27.0",
    "fs-extra": "^9.1.0",
    "insomnia-inso": "^2.2.33",
    "js-yaml": "^4.1.0",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "openapi-typescript": "^3.2.3",
    "redoc-cli": "^0.11.4",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
