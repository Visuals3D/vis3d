{
  "name": "${MICROSERVICE_NAME}",
  "version": "1.0.0",
  "description": "The ${MICROSERVICE_NAME} Microservice",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy-assets": "ts-node tools/copyAssets",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon -e ts, npm run dev:start",
    "build": "npm-run-all clean tsc copy-assets",
    "start": "node ./dist/app/src/index.js",
    "prod:start": "npm-run-all build start",
    "watch:debug": "nodemon --inspect=5852 -e ts,tsx --exec node -r ts-node/register ./src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docs": "redoc-cli bundle -o index.html swagger.yaml"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "async": "^3.1.0",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/async": "^3.0.2",
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.17.0",
    "@types/express-session": "^1.15.13",
    "@types/fs-extra": "^8.0.0",
    "@types/node": "^12.19.16",
    "fs-extra": "^8.1.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "redoc-cli": "^0.9.2",
    "rimraf": "^2.6.3",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.2"
  }
}
